<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StudentsActivity">

    <ListView
        android:id="@+id/lvStudent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/collapse_arrow"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"/>

    <ImageButton
        android:id="@+id/btnAddStudent"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:src="@drawable/add"
        android:background="@drawable/circle_button"

        android:layout_above="@id/fabOption"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="10dp"

        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/ibDeleteListViewItems"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:src="@drawable/delete_foreground"
        android:scaleType="centerInside"

        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:visibility="invisible"/>

</RelativeLayout>