<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StudentInforActivity">

    <ImageView
        android:id="@+id/ivStudentInfoProfile"
        android:layout_width="90dp"
        android:layout_height="120dp"

        android:src="@drawable/male_student"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/ivStudentInfoProfile">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StudentInfo"
                android:text="Name:"/>

            <TextView
                android:id="@+id/txtStudentInfoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StudentInfo"
                android:text="Student name"
                android:textColor="#54B37B"

                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StudentInfo"
                android:text="Birth date:"/>

            <TextView
                android:id="@+id/txtStudentInfoBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StudentInfo"
                android:text="1/1/1990"
                android:textColor="#54B37B"

                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StudentInfo"
                android:text="Phone:"/>

            <TextView
                android:id="@+id/txtStudentInfoPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StudentInfo"

                android:text="Unknown"
                android:textColor="#54B37B"

                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StudentInfo"
                android:text="Mail:"/>

            <TextView
                android:id="@+id/txtStudentInfoMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StudentInfo"

                android:text="Unknown"
                android:textColor="#54B37B"

                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StudentInfo"
                android:text="Sex:"/>

            <TextView
                android:id="@+id/txtStudentInfoSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StudentInfo"

                android:text="Male"
                android:textColor="#54B37B"

                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StudentInfo"
                android:text="Position:"/>

            <TextView
                android:id="@+id/txtStudentInfoPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StudentInfo"

                android:text="Unknown"
                android:textColor="#54B37B"

                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabStudentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"

        android:src="@drawable/collapse_arrow"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="176dp"
        android:layout_height="51dp"

        android:layout_above="@id/fabStudentInfo"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"

        android:background="#00000000"
        android:drawableRight="@drawable/update_foreground"
        android:text="Update"
        android:textColor="#1556BD"

        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnRemove"
        android:layout_width="176dp"
        android:layout_height="51dp"

        android:layout_above="@id/btnUpdate"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"

        android:background="#00000000"
        android:drawableRight="@drawable/delete_foreground"
        android:text="Remove"
        android:textColor="#1556BD"

        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="176dp"
        android:layout_height="51dp"

        android:layout_above="@id/btnRemove"
        android:layout_alignParentRight="true"

        android:layout_marginBottom="15dp"
        android:background="#00000000"

        android:drawableRight="@drawable/back_foreground"
        android:text="Back"
        android:textColor="#1556BD"

        android:visibility="invisible"/>

</RelativeLayout>